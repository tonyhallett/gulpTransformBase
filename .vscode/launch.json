    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Jest",
            "request": "launch",
            "args": [
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest"
        },
        {
            "type": "node",
            "name": "vscode-jest-tests specific",
            "request": "launch",
            "args": [
                "--runInBand",
                "--testNamePattern",
                "add in here to debug a specific test when vscode-jest fails to work properly or want to debug a test before it fails"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest"
        }
    ]
}